{% extends 'base.html.twig' %}

{% block title %}Student Grades{% endblock %}

{% block body %}
<style>
    body {background-color: #f1f1f1; color: #333;}
    .wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .wrapper code { background: #F5F5F5; padding: 2px 6px; }
    th { text-align: left; width: 20%;}
</style>

<div class="wrapper">
    <h1>Student grades</h1>

    <table>
        <thead>
        <tr>
            {% for heading in gradesTable.header %}
                <th>{{ heading }}</th>
            {% endfor %}
        </tr>
        </thead>
        <tbody>
        {% for data in gradesTable.data %}
            <tr>
                {% for value in data %}
                    <td>{{ value }}</td>
                {% endfor %}
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
