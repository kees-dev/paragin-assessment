{% extends 'base.html.twig' %}

{% block title %}Analytics{% endblock %}

{% block body %}
    <style>
        body {background-color: #f1f1f1; color: #333;}
        .wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .wrapper code { background: #F5F5F5; padding: 2px 6px; }
        th { text-align: left; width: 20%;}
    </style>

    <div class="wrapper">
        <h1>Analytics</h1>
        <h2>Pâ€™-values</h2>

        <table>
            <thead>
            <tr>
                {% for heading in pValueTable.header %}
                    <th>{{ heading }}</th>
                {% endfor %}
            </tr>
            </thead>
            <tbody>
            {% for data in pValueTable.data %}
                <tr>
                    {% for value in data %}
                        <td>{{ value }}</td>
                    {% endfor %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <h2>rit-values</h2>

        {% if ritValueTable|default %}
        <table>
            <thead>
            <tr>
                {% for heading in ritValueTable.header %}
                    <th>{{ heading }}</th>
                {% endfor %}
            </tr>
            </thead>
            <tbody>
            {% for data in ritValueTable.data %}
                <tr>
                    {% for value in data %}
                        <td>{{ value }}</td>
                    {% endfor %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% endif %}

    </div>
{% endblock %}
